<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitiesforelderly.MainActivityElderly"
    android:background="@color/colorPrimary"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="15dp"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/main_textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/rubik_medium"
        android:gravity="center"
        android:text="@string/family_and_friends"
        android:textColor="@color/colorTextDark"
        android:textSize="35sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_addContact_button"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_below="@+id/main_textView"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/colorBlue"
        android:fontFamily="@font/rubik_medium"
        android:includeFontPadding="false"
        android:padding="8dp"
        android:text="@string/new_contact"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/colorTextLight"
        android:textSize="30sp"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_round_plus_48"
        app:iconGravity="start"
        app:iconTint="@color/colorTextLight" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_newRequests_button"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_below="@+id/main_addContact_button"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/colorGrey"
        android:fontFamily="@font/rubik_medium"
        android:includeFontPadding="false"
        android:padding="8dp"
        android:text="@string/new_requests"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/colorTextLight"
        android:textSize="30sp"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_round_mail_48"
        app:iconGravity="start"
        app:iconTint="@color/colorTextLight" />


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/main_swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/main_bottomLinearLayout"
        android:layout_below="@+id/main_newRequests_button"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_contacts_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <TextView
        android:id="@+id/main_errorMessage_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_newRequests_button"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/rubik_medium"
        android:includeFontPadding="false"
        android:textColor="@color/colorTextLight"
        android:textSize="20sp"
        android:gravity="center"
        android:visibility="gone" />

<!--    <ProgressBar-->
<!--        android:id="@+id/main_loadContacts_progressBar"-->
<!--        android:layout_width="@dimen/_25sdp"-->
<!--        android:layout_height="@dimen/_25sdp"-->
<!--        android:layout_below="@id/main_newRequests_button"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:visibility="gone" />-->

    <LinearLayout
        android:id="@+id/main_bottomLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_exit_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginEnd="15dp"
            android:backgroundTint="@color/colorAccent"
            android:padding="8dp"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_round_exit_48"
            app:iconTint="@color/colorTextLight"
            app:iconGravity="textStart"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_hobbies_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/colorPurple"
            android:padding="8dp"
            app:cornerRadius="12dp"
            android:text="@string/hobbies"
            android:textSize="30sp"
            android:textAllCaps="false"
            android:textColor="@color/colorTextLight"
            android:includeFontPadding="false"
            android:fontFamily="@font/rubik_medium"
            android:textAlignment="textStart"
            app:icon="@drawable/ic_round_bulb_48"
            app:iconTint="@color/colorTextLight"
            app:iconGravity="start"/>

    </LinearLayout>

</RelativeLayout>