    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitiesforelderly.InfoContactActivity"
    android:background="@color/colorPrimary"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="15dp"
    android:paddingBottom="20dp">

    <RelativeLayout
        android:id="@+id/contactInfo_topRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/contactInfo_profileImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            app:shapeAppearanceOverlay="@style/RoundedSquare" />
    </RelativeLayout>

    <TextView
        android:id="@+id/contactInfo_contactName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/contactInfo_topRelativeLayout"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@color/colorTextDark"
        android:textSize="30sp" />

