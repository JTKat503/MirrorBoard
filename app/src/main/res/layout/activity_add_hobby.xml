                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableEnd="@drawable/ic_round_plus_48"
                    android:drawableTint="@color/colorTextDark"
                    android:text="@string/knitting"
                    android:textSize="27sp"
                    android:fontFamily="@font/rubik_medium"
                    android:includeFontPadding="false"
                    android:paddingStart="10dp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addHobby_music_layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/shape_stroke_black"
                android:layout_below="@id/addHobby_knitting_layout"
                android:layout_marginTop="15dp"
                android:padding="5dp" >
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/hobby_icon_music"
                    app:shapeAppearanceOverlay="@style/RoundedSquare" />
                <CheckBox
                    android:id="@+id/addHobby_music_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableEnd="@drawable/ic_round_plus_48"
                    android:drawableTint="@color/colorTextDark"
                    android:text="@string/music"
                    android:textSize="27sp"
                    android:fontFamily="@font/rubik_medium"
                    android:includeFontPadding="false"
                    android:paddingStart="10dp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addHobby_pets_layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/shape_stroke_black"
                android:layout_below="@id/addHobby_music_layout"
                android:layout_marginTop="15dp"
                android:padding="5dp" >
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/hobby_icon_pets"
                    app:shapeAppearanceOverlay="@style/RoundedSquare" />
                <CheckBox
                    android:id="@+id/addHobby_pets_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableEnd="@drawable/ic_round_plus_48"
                    android:drawableTint="@color/colorTextDark"
                    android:text="@string/pets"
                    android:textSize="27sp"
                    android:fontFamily="@font/rubik_medium"
                    android:includeFontPadding="false"
                    android:paddingStart="10dp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addHobby_tv_layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/shape_stroke_black"
                android:layout_below="@id/addHobby_pets_layout"
                android:layout_marginTop="15dp"
                android:padding="5dp" >
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/hobby_icon_tv"
                    app:shapeAppearanceOverlay="@style/RoundedSquare" />
                <CheckBox
                    android:id="@+id/addHobby_tv_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableEnd="@drawable/ic_round_plus_48"
                    android:drawableTint="@color/colorTextDark"
                    android:text="@string/films_tv"
                    android:textSize="27sp"
                    android:fontFamily="@font/rubik_medium"
                    android:includeFontPadding="false"
                    android:paddingStart="10dp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

