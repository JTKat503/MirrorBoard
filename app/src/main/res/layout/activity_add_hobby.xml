    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/addHobby_bottomLinearLayout"
        android:layout_below="@id/addHobby_textView"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/addHobby_cooking_layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/shape_stroke_black"
                android:padding="5dp" >
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/hobby_icon_cooking"
                    app:shapeAppearanceOverlay="@style/RoundedSquare" />
                <CheckBox
                    android:id="@+id/addHobby_cooking_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableEnd="@drawable/ic_round_plus_48"
                    android:drawableTint="@color/colorTextDark"
                    android:text="@string/cooking"
                    android:textSize="27sp"
                    android:fontFamily="@font/rubik_medium"
                    android:includeFontPadding="false"
                    android:paddingStart="10dp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addHobby_exercise_layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/shape_stroke_black"
                android:layout_below="@id/addHobby_cooking_layout"
                android:layout_marginTop="15dp"
                android:padding="5dp" >
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/hobby_icon_exercise"
                    app:shapeAppearanceOverlay="@style/RoundedSquare" />
                <CheckBox
                    android:id="@+id/addHobby_exercise_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableEnd="@drawable/ic_round_plus_48"
                    android:drawableTint="@color/colorTextDark"
                    android:text="@string/exercise"
                    android:textSize="27sp"
                    android:fontFamily="@font/rubik_medium"
                    android:includeFontPadding="false"
                    android:paddingStart="10dp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addHobby_fishing_layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/addHobby_exercise_layout"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_stroke_black"
                android:padding="5dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/hobby_icon_fishing"
                    app:shapeAppearanceOverlay="@style/RoundedSquare" />

                <CheckBox
                    android:id="@+id/addHobby_fishing_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableEnd="@drawable/ic_round_plus_48"
                    android:drawableTint="@color/colorTextDark"
                    android:fontFamily="@font/rubik_medium"
                    android:includeFontPadding="false"
                    android:paddingStart="10dp"
                    android:text="@string/fishing"
                    android:textSize="27sp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addHobby_gardening_layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/shape_stroke_black"
                android:layout_below="@id/addHobby_fishing_layout"
                android:layout_marginTop="15dp"
