<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitiesforelderly.AddHobbyActivity"
    android:background="@color/colorPrimary"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="15dp"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/addHobby_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/rubik_medium"
        android:gravity="center"
        android:text="@string/add_a_hobby"
        android:textColor="@color/colorTextDark"
        android:textSize="35sp" />

    <ScrollView
        android:id="@+id/addHobby_hobbiesList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/addHobby_footerLayout"
        android:layout_below="@id/addHobby_header"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/addHobby_cooking_layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/shape_stroke_black"
                android:padding="5dp" >
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/hobby_icon_cooking"
                    app:shapeAppearanceOverlay="@style/RoundedSquare" />
                <CheckBox
                    android:id="@+id/addHobby_cooking"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/cooking"
                    android:textSize="27sp"
                    android:fontFamily="@font/rubik_medium"
                    android:includeFontPadding="false"
                    android:paddingStart="10dp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addHobby_exercise_layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/shape_stroke_black"
                android:layout_below="@id/addHobby_cooking_layout"
                android:layout_marginTop="15dp"
                android:padding="5dp" >
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/hobby_icon_exercise"
                    app:shapeAppearanceOverlay="@style/RoundedSquare" />
                <CheckBox
                    android:id="@+id/addHobby_exercise"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/exercise"
                    android:textSize="27sp"
                    android:fontFamily="@font/rubik_medium"
                    android:includeFontPadding="false"
                    android:paddingStart="10dp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addHobby_fishing_layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/addHobby_exercise_layout"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_stroke_black"
                android:padding="5dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/hobby_icon_fishing"
                    app:shapeAppearanceOverlay="@style/RoundedSquare" />

                <CheckBox
                    android:id="@+id/addHobby_fishing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/rubik_medium"
                    android:includeFontPadding="false"
                    android:paddingStart="10dp"
                    android:text="@string/fishing"
                    android:textSize="27sp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addHobby_gardening_layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/shape_stroke_black"
                android:layout_below="@id/addHobby_fishing_layout"
                android:layout_marginTop="15dp"
                android:padding="5dp" >
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/hobby_icon_gardening"
                    app:shapeAppearanceOverlay="@style/RoundedSquare" />
                <CheckBox
                    android:id="@+id/addHobby_gardening"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/gardening"
                    android:textSize="27sp"
                    android:fontFamily="@font/rubik_medium"
                    android:includeFontPadding="false"
                    android:paddingStart="10dp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addHobby_knitting_layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/shape_stroke_black"
                android:layout_below="@id/addHobby_gardening_layout"
                android:layout_marginTop="15dp"
                android:padding="5dp" >
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/hobby_icon_knitting"
                    app:shapeAppearanceOverlay="@style/RoundedSquare" />
                <CheckBox
                    android:id="@+id/addHobby_knitting"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/knitting"
                    android:textSize="27sp"
                    android:fontFamily="@font/rubik_medium"
                    android:includeFontPadding="false"
                    android:paddingStart="10dp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addHobby_music_layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/shape_stroke_black"
                android:layout_below="@id/addHobby_knitting_layout"
                android:layout_marginTop="15dp"
                android:padding="5dp" >
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/hobby_icon_music"
                    app:shapeAppearanceOverlay="@style/RoundedSquare" />
                <CheckBox
                    android:id="@+id/addHobby_music"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/music"
                    android:textSize="27sp"
                    android:fontFamily="@font/rubik_medium"
                    android:includeFontPadding="false"
                    android:paddingStart="10dp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addHobby_pets_layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/addHobby_music_layout"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_stroke_black"
                android:padding="5dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/hobby_icon_pets"
                    app:shapeAppearanceOverlay="@style/RoundedSquare" />

                <CheckBox
                    android:id="@+id/addHobby_pets"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/rubik_medium"
                    android:includeFontPadding="false"
                    android:paddingStart="10dp"
                    android:text="@string/pets"
                    android:textSize="27sp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addHobby_tv_layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/shape_stroke_black"
                android:layout_below="@id/addHobby_pets_layout"
                android:layout_marginTop="15dp"
                android:padding="5dp" >
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/hobby_icon_tv"
                    app:shapeAppearanceOverlay="@style/RoundedSquare" />
                <CheckBox
                    android:id="@+id/addHobby_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/films_tv"
                    android:textSize="27sp"
                    android:fontFamily="@font/rubik_medium"
                    android:includeFontPadding="false"
                    android:paddingStart="10dp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/addHobby_footerLayout"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addHobby_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/colorGrey"
            android:padding="8dp"
            app:cornerRadius="12dp"
            android:text="@string/back"
            android:textSize="27sp"
            android:textAllCaps="false"
            android:textColor="@color/colorTextLight"
            android:includeFontPadding="false"
            android:fontFamily="@font/rubik_medium"
            android:textAlignment="textStart"
            app:icon="@drawable/ic_round_arrow_left_48"
            app:iconTint="@color/colorTextLight"
            app:iconGravity="start"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addHobby_done"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/colorBlue"
            android:padding="8dp"
            app:cornerRadius="12dp"
            android:text="@string/save"
            android:textSize="27sp"
            android:textAllCaps="false"
            android:textColor="@color/colorTextLight"
            android:includeFontPadding="false"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/addHobby_offlineWarning"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/warning_title"
            android:fontFamily="@font/rubik_medium"
            android:textSize="22sp"
            android:textColor="@color/colorAccent"
            android:textAllCaps="false"
            android:gravity="center"
            android:drawablePadding="5dp"
            app:drawableStartCompat="@drawable/ic_round_warning_48"
            app:drawableTint="@color/colorAccent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/warning_details"
            android:fontFamily="@font/rubik_medium"
            android:textSize="20sp"
            android:textColor="@color/colorTextDark"
            android:textAllCaps="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/or"
            android:fontFamily="@font/rubik_medium"
            android:textSize="20sp"
            android:textColor="@color/colorTextDark"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addHobby_exitApp"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/colorAccent"
            android:fontFamily="@font/rubik_medium"
            android:includeFontPadding="false"
            android:padding="8dp"
            android:text="@string/exit_app"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/colorTextLight"
            android:textSize="25sp"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_round_exit_48"
            app:iconGravity="start"
            app:iconTint="@color/colorTextLight" />

    </LinearLayout>

</RelativeLayout>